<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ekzeget.ekzeget"
    >

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      >
    <activity android:name=".view.activity.MainActivity">
      <meta-data
          android:name="android.app.default_searchable"
          android:value=".SearchActivity"
          />
    </activity>
    <activity
        android:name=".view.activity.StartActivity"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".view.activity.PartsActivity">
    </activity>
    <activity android:name=".view.activity.ChapterTextActivity">
    </activity>
    <activity android:name=".view.activity.InterTextActivity">
    </activity>
    <activity
        android:name=".view.activity.SearchActivity"
        android:launchMode="singleTop"
        >
      <intent-filter>
        <action android:name="android.intent.action.SEARCH"/>
      </intent-filter>

      <meta-data
          android:name="android.app.searchable"
          android:resource="@xml/searchable"
          />
    </activity>
    <activity android:name=".view.activity.TestActivity">
    </activity>
  </application>

</manifest>